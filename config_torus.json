{ "module": {
	"name": "prod",
	"submodules": [ {
		"if": "depth == 1",
		"then": { "name": "a", "module": "ring" },
		"else": {
			"cartesian": [
				{
					"name": "a",
					"module": "ring"
				},
				{
					"if": "depth > 2",
					"then": {
						"name": "p",
						"module": "prod",
						"params": [ { "depth": "depth-1" } ]
					},
					"else": {
						"name": "b",
						"module": "ring"
					}
				}
			]}
	}
	]
}},


